<form class="form-horizontal" method="post">
	<fieldset>
	<div class="container">
			<legend class="form-signin-heading">用户登录</legend>

	<div class="control-group">
			<label class="control-label" for="name">用户名</label>
			<div class="controls">
			<label for="name">
				<input type="text" class="input-xlarge" id="name" name="name" placeholder="EmailAddress" />
			</label>
			</div>

	</div>

	<div class="control-group">
		<label class="control-label" for="password">密码</label>
		<div class="controls">
		<label for="password">
			<input type="password" class="input-xlarge" id="password" name="password" placeholder="Password" />
		</label>
		</div>
	</div>
	<div class="control-group">
	<div class="controls">
	<label class="checkbox">
		<input type="checkbox">记住我
	</label>
	</div>

	<div class="form-actions">
			<button type="submit" class="btn btn-primary">登录</button>
			<button type="reset" class="btn">取消</button>
	</div>
	</div>
</div>
	
</fieldset>
</form>

